n=float(input('digite um numero:'))
n1=float(input('digite o segundo numero:'))
n2=float(input('digite o terceiro numero:'))
if n > n1 and n > n2:
    print( n,'foi o maior numero digitado.')
elif n1 > n1 and n1 > n2:
    print(n1," foi o maior numero digitado.")
else:
    print(n2," foi o maior numero digitado.")

if n< n1 and n < n2:
    print( n,"foi o menor numero digitado.")
elif n1 < n and n1 < n2:
    print(n1,"foi o menor numero digitado.")
else:
    print(n2," foi o menor numero digitado.")
